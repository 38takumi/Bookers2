<main>
 <div class="container px-5 px-sm-0">
 <div class="row">
 
 <body>

<div class="col-md-3">
 <!--成功時・エラー時メッセージ-->
 <%= render 'books/message', book: @book %>
 
 <!--ユーザーインフォ-->
 <%= render 'books/info', user: @user %>

 <!--New book-->
 <%= render 'books/new', book: @book %>
  
</div>
  
  
  <div class="col-md-8 offset-md-1">
  <!--Booksの部分　ここから-->
  
<h2>Books</h2>
 <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Title</th>
      <th scope="col">Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
   <% @books.each do |book| %>
   <thead>
    <tr>
      <th scope="col"><%= link_to book.title,book_path(book.id) %></th>
      <th ><%= book.body %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% end %>
  </tbody>
</table> 
</div>
  

 
 </body>
 </div>
 </div>
 
 
</main>