<!--Title用-->
<main>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show",show_path(book.id) %></td>
          <td><%= link_to "Edit",edit_path(book.id) %></td>
          <td><%= link_to destroy_path(book), "Destroy", method: :delete, data: {confirm: "Are you sure?"}%></td>
        </tr>
      </tbody>
    <% end %>
    </thead>
  </table>
  
　<!--New book部分-->
　<h1>New book</h1>
　<!-- form_with部分 -->
　<%= form_with model:@book, local:true do |f| %>

  <!--エラー時のメッセージ-->
  <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <!--<h4>カテゴリー</h4>-->
  <!--<%= f.text_field :category %>-->

  <h4>Body</h4>
  <%= f.text_area :body %>

  <div><%= f.submit 'Create Book' %></div>

　<% end %>
</main>

